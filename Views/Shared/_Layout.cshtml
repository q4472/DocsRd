<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DocsRd</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style type="text/css">
        html {
            width: 100%;
            height: 100%;
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 9pt;
            width: 100%;
            height: 100%;
        }

        #_layout_left_section {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 20px;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background: #ffddff;
            border-right: 1px solid black;
            width: 199px;
            height: auto;
        }

        #_layout_content {
            position: fixed;
            left: 200px;
            top: 0;
            right: 0;
            bottom: 20px;
            margin: 0;
            padding: 0;
            overflow: auto;
            background: #ffffdd;
            width: auto;
            height: auto;
        }

        #_layout_footer {
            position: fixed;
            left: 0;
            right: 0;
            bottom: 0;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #dddddd;
            width: 100%;
            height: 20px;
        }
    </style>
    <style type="text/css" media="print">
        #_layout_content {
            position: relative;
            left: 0;
            top: 0;
            overflow: visible;
            background: #ffffff;
        }

        #_layout_left_section {
            display: none;
        }

        #_layout_footer {
            display: none;
        }
    </style>
</head>
<body data-session-id="@TempData["SessionId"]">
    <div id="_layout_left_section">
        <partial name="~/Views/Shared/LeftSection.cshtml" />
    </div>
    <div id="_layout_content">
        @RenderBody()
    </div>
    <div id="_layout_footer">
        <span id="_layout_footer_validation" style="padding: 2px;">@Html.ValidationSummary()</span>
        <span id="_layout_footer_msg" style="display: none; padding: 2px;">&nbsp;</span>
        <span id="_layout_footer_loading" style="display: none; padding: 2px;">Загрузка данных ...</span>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/Nskd/Client.js"></script>
    <script src="~/lib/Nskd/Convert.js"></script>
    <script src="~/lib/Nskd/Data.js"></script>
    <script src="~/lib/Nskd/Http.js"></script>
    <script src="~/lib/Nskd/Js.js"></script>
    <script src="~/lib/Nskd/Json.js"></script>
    <script src="~/lib/Nskd/Menu.js"></script>
    <script src="~/lib/Nskd/Server.js"></script>
    <script src="~/lib/Nskd/Utility.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        window.onload = function () {
            Nskd.Server.SessionId = $('body').attr('data-session-id');
            $('#_layout_left_section').dblclick(function () {
                let lls = $('#_layout_left_section');
                let lc = $('#_layout_content');
                if (lls.css('margin-left') == '0px') {
                    lls.css('margin-left', '-180px');
                    lc.css('margin-left', '-180px');
                } else {
                    lls.css('margin-left', '0px');
                    lc.css('margin-left', '0px');
                }
            });
        };
    </script>
    @RenderSection("scripts", false)
</body>
</html>
